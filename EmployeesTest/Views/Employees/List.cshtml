@model IEnumerable<EmployeesTest.Models.EmployeeView>

@{
    ViewData["Title"] = "List";
}

<h1>Список працівників</h1>

<p>
    <a asp-action="Create">Додати працівника</a>
</p>
<table class="table">
    <thead>
        <tr>           
            <th>
                @Html.DisplayNameFor(model => model.FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Patronimyc)
            </th>           
            <th>
                @Html.DisplayNameFor(model => model.DepartmentName)
            </th>
            
            <th>
                @Html.DisplayNameFor(model => model.PositionName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>           
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Patronimyc)
            </td>           
            <td>
                @Html.DisplayFor(modelItem => item.DepartmentName)
            </td>           
            <td>
                @Html.DisplayFor(modelItem => item.PositionName)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |              
                @Html.ActionLink("Delete", "Delete", new { id = item.Id } )
            </td>
        </tr>
}
    </tbody>
</table>
